<script type="text/javascript">
	$(document).ready( () => {
		
		drawCards();
	});

	function drawCards(){
		$('.card-container').empty();
		<% @cards.each do |card| %>
			$('.card-container').append('<div class = "col card"><div class = "card-img" onclick = "test(\'<%= card.name %>\')"><img src= <%= card.card_url %> ></img</div></div>');
		<% end %>
	}

	function test(){
		console.log('test');
	}

	function generatePack() {
		location.reload();
	}
</script>